<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog class="dialogradius">
    <content>
        <VBox>

            <Label text="{name}" class="dialogclass"/>
            <Label text="{ilness}" class="dialogclass"/>
            <Label text="{phonenumber}" class="dialogclass"/>
            <Label text="{adress}" class="dialogclass"/>
            <Label text="{status}" class="dialogclass"/>

            <VBox class="textareaclass">
                <Input id="nameID" value="{name}"/>
                <Input id="illnessInputID" value="Hastalık Türü : "/>
                <Input id="phoneNumberID" value="Telefon Numarası : "/>
                <Input id="adressID" value="Adres : "/>
                <Input id="statusID" value="Durumu : "/>
            
            
            </VBox>

        </VBox>
 <HBox>
        <Button text="Kaydet" class="dialogsavebutton" press=""/>
        <Button text="Kapat" class="dialogclosebutton" press="CloseDialogPress"/>
</HBox>
</content>
    </Dialog>



</core:FragmentDefinition>
